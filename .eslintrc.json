{
  "extends": "next/core-web-vitals",
  "plugins": ["unused-imports", "import"],
  "rules": {
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "import/no-unused-modules": [1, { "unusedExports": true }]
  }
}
